<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="ButtonAdd" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource DefaultTextLight}" />
        <Setter Property="BackgroundColor" Value="{StaticResource GreenCustom}" />
        <Setter Property="Padding" Value="12, 6" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="14" />

    </Style>

    <Style x:Key="ButtonRemove" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource DefaultTextLight}" />
        <Setter Property="BackgroundColor" Value="{StaticResource RedCustom}" />
        <Setter Property="Padding" Value="12, 6" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="ButtonDefault" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource DefaultTextDark}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray300}" />
        <Setter Property="Padding" Value="12, 6" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="ButtonEdit" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource DefaultTextDark}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray400}" />
        <Setter Property="Padding" Value="12, 6" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="16" />
    </Style>
</ResourceDictionary>